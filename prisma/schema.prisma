generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model book {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  book_id       Int    @unique
  chapter_count Int
  code          String @unique
  order         Int    @unique
}

model book_abbreviation {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  book_id Int    @unique
  value   String @unique
}

model book_name {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  book_id      Int    @unique
  book_name_id Int    @unique
  value        String @unique
}

model chapter {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  book_id    Int
  chapter    Int
  chapter_id String @unique
  content    String
}
