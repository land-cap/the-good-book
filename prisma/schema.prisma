generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgres"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model book {
  id            Int             @id(map: "book_duplicate_pkey") @default(autoincrement())
  code          String          @unique
  chapter_count Int
  order         Int             @unique(map: "book_duplicate_order_key")
  vdc_book_name vdc_book_name[]
}

model vdc_book_name {
  id      Int    @id(map: "vdc-book_pkey") @default(autoincrement())
  name    String @unique(map: "vdc_book_name_key")
  order   Int    @unique(map: "vdc-book_order_key")
  book_id Int?
  book    book?  @relation(fields: [book_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model vdc_chapter {
  id      Int   @id(map: "vdc-chapter-new_pkey") @unique(map: "vdc-chapter-new_id_key") @default(autoincrement())
  chapter Int?
  content Json? @db.Json
  book_id Int
}
