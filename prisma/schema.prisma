generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model book {
  id            Int        @id @default(autoincrement())
  order         Int        @unique
  code          String     @unique
  chapter_count Int
  book_name     book_name?
}

model book_name {
  id      Int    @id @default(autoincrement())
  name    String @unique
  book_id Int    @unique
  book    book   @relation(fields: [book_id], references: [id])
}

model chapter {
  id      String @id @unique
  chapter Int
  content String
  book_id Int
}
