generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model book {
  id            Int             @id @default(autoincrement())
  code          String          @unique
  chapter_count Int
  order         Int             @unique(map: "book_duplicate_order_key")
  vdc_book_name vdc_book_name[]
}

model vdc_book_name {
  id      Int    @id @default(autoincrement())
  name    String @unique(map: "vdc_book_name_key")
  order   Int    @unique(map: "vdc-book_order_key")
  book_id Int
  book    book   @relation(fields: [book_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model vdc_chapter {
  id      Int    @id @unique(map: "vdc_chapter_new_id_key") @default(autoincrement())
  chapter Int
  content String
  book_id Int
}
