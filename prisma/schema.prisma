generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model book {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  book_id       Int    @unique(map: "book_id_1")
  chapter_count Int
  code          String
  order         Int

  @@index([code], map: "code_1")
}

model book_abbreviation {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  book_id      Int    @unique(map: "book_id_1")
  book_name_id Int    @unique(map: "book_name_id_1")
  value        String
}

model book_name {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  book_id      Int
  book_name_id Int    @unique(map: "book_name_id_1")
  value        String

  @@index([book_id], map: "book_id_1")
}

model chapter {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  book_id    Int
  chapter    Int
  chapter_id String @unique(map: "chapter_id_1")
  content    String

  @@index([book_id], map: "book_id_1")
  @@index([chapter], map: "chapter_1")
}
